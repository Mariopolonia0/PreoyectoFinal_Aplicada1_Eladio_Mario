<Window x:Class="ProyectoFinalAplicada1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProyectoFinalAplicada1"
        mc:Ignorable="d"
        Icon="/Resources/Window.png"
        Title="Menu Pricipal" Height="400" Width="600">
    <Grid>

        <StackPanel>
            <Menu Height="18">
                <MenuItem Header="Registros" >
                    
                    <MenuItem x:Name="UsuariosMenuItem" Header="Registro Usuarios" Click="UsuariosMenuItem_Click" />
                </MenuItem>

                <MenuItem Header="Consultas"  >
                    <MenuItem x:Name="UsuarioMenuItem" Header="Consulta Usuarios"  Click="UsuarioMenuItem_Click"  />
                </MenuItem>

                <MenuItem Header="Ayuda" >

                    <MenuItem x:Name="InformacionMenuItem" Header="Informacion" />
                </MenuItem>
            </Menu>
        </StackPanel>

    </Grid>
</Window>
