<Window x:Class="ProyectoFinalAplicada1.UI.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProyectoFinalAplicada1.UI"
        mc:Ignorable="d"
        Title="Login" Height="230" Width="350">
    <Grid>

        <StackPanel Orientation="Vertical" Margin="10">
            <StackPanel Orientation="Vertical">
                <Label Content="Nombre Usuario"/>

                <TextBox x:Name="NombreUsuarioTextBox" Text="{Binding NombreUsuario}" />

                <Label Content="Contraseña"/>

                <PasswordBox x:Name="ContrasenaPasswordBox"/>
                <!--.Attach="True" PasswordHelper:PasswordHelper.Password="{Binding Contrasena, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>-->

                <Button x:Name="IngresarButton" Content="Ingresar" Margin="30" Width="60" Height="24" Click="IngresarButton_Click"/>
                <Button x:Name="CancelarButton" Content="Cancelar" Width="60" Height="24" Click="CancelarButton_Click"/>
            </StackPanel>
        </StackPanel>

    </Grid>
</Window>
